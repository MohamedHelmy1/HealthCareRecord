@model DAL.Models.vacation.VacationTypeViewModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/jquery/jquery.min.js"></script>
    <script src='/ColarInput/spectrum.js'></script>
    <link rel='stylesheet' href='/ColarInput/spectrum.css' />
    <title>Updatevacation</title>
</head>
<body>

<h4>Update Vacation Type </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Updatevacation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" hidden/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VacationName" class="control-label"></label>
                <input asp-for="VacationName" class="form-control" />
                <span asp-validation-for="VacationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Background" class="control-label"></label>
                    <input id="Background" asp-for="Background" class="form-control" />
                <span asp-validation-for="Background" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberDays" class="control-label"></label>
                <input asp-for="NumberDays" class="form-control" />
                <span asp-validation-for="NumberDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
<script>
    $("#Background").spectrum({
        preferredFormat: "hex",
        showInput: true
    });
    $("#Background").show();
</script>
