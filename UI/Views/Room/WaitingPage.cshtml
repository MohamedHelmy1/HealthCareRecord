
@{
    ViewData["Title"] = "WaitingPage";
    Layout = "~/Views/Shared/Layout/_NewLayout.cshtml";
}
@inject BLL.Services.RoomWorkServices.IRoomWorkServices data
    <link href="~/receptionist dashbord/dist/css/style.css" rel="stylesheet" />


    <div class="x_content mt-0">
        <h2 class="p-2 rounded ps-3"> Room Orders</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">
                    Home
                </li>
                <li class="breadcrumb-item text-denger" aria-current="page">
                    Room Orders
                </li>
            </ol>
        </nav>

        <div class="card">
            <div class="card-header">
            </div>
            <!-- /.card-header -->
            <div class="card-body patients-wating">
                <table id="example1" class="table table-bordered table-striped">
                    <thead style="
    background: #74a8bd;
    color: white;
    border: 0px;">
                        <tr>
                            <th>#</th>
                            <th>Patient Name</th>
                            <th>Floor</th>
                            <th>Number of Room</th>
                            <th>Doctor Name</th>
                            <th>Date And Time</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{var Counter = 1;}
                        @foreach (var item in data.GetAllOrders())
                        {
                            <tr>
                                <td style="vertical-align: bottom;border-bottom: 2px solid #dee2e6;">@(Counter++)</td>
                                <td style="vertical-align: bottom;border-bottom: 2px solid #dee2e6;">@item.PatientName</td>
                                <td style="vertical-align: bottom;border-bottom: 2px solid #dee2e6;"> @item.Floor</td>
                                <td style="vertical-align: bottom;border-bottom: 2px solid #dee2e6;"> @item.RoomNumber</td>
                                <td style="vertical-align: bottom;border-bottom: 2px solid #dee2e6;">@item.DoctorName</td>
                                <td style="vertical-align: bottom;border-bottom: 2px solid #dee2e6;">@item.DateAndTime</td>
                                <td style="vertical-align: bottom;border-bottom: 2px solid #dee2e6;">
                                    <a asp-action="ConfirmOrder" asp-controller="Room" asp-route-Id="@item.PatientRoomId" class="btn btn-success me-3"><i class="text-light fas fa-check"></i></a>
                                    <a onclick="Cancel(@item.PatientRoomId)" class="btn btn-danger"><i class="text-light fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }


                    </tbody>
                    <tfoot>
                        <tr>
                            <th>#</th>
                            <th>Patient Name</th>
                            <th>Floor</th>
                            <th>Number of Room</th>
                            <th>Doctor Name</th>
                            <th>Date And Time</th>
                            <th>Actions</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.card-body -->
        </div>

    </div>



    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.0/sweetalert.min.js"></script>
    <script type="text/javascript">

        function Cancel(id) {
            swal({
                title: `Are you sure you want to cancel this order ?!`,
                text: "If you canceled this, it will be gone forever.",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        $.ajax({

                            type: "POST",
                            url: "/Room/Cancel",
                            data: {
                                id: id,

                            },

                            success: function (res) {

                                swal("Deleted!", "Your imaginary file has been archived.", "success");
                                window.location = "/Room/WaitingPage"

                            }

                        });
                    }
                });
        }

