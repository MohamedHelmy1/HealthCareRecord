@model DAL.Entities.Department
@{
    ViewBag.Title = "Create Departement";

}
@inject BLL.Services.IDoctorService Doc ;
 <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<!-- Validation Plugin Js -->

<script>
        if (@ViewBag.Success == 1) {
             swal("Saved Success!", "You clicked the button!", "success").then(function () {
                $(".A input").val("");
            });
           
        }
        </script>
<div class="x_content mt-0">
    <h2 class="p-2 rounded ps-3">Create Departement</h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">
                Home
            </li>
            <li class="breadcrumb-item" aria-current="page">
                Create Departement
            </li>
        </ol>
    </nav>
    <form class="A" style="height: 100vh;" asp-controller="Department" asp-action="Create">
        <!-- Basic Information  -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card shadow">
                    <div class="header ms-3 pt-2">
                        <h3>Departement Information</h3>
                    </div>
                    <div class="body">
                        <!-- departement Name -->
                        <div class="row clearfix">
                            <div class="col-sm-12 mb-4">
                                <div class="alert alert-warning alert-dismissible fade show m-auto mb-1 d-none" role="alert">
                                    You should check in on some of those fields below.
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                                <div class="form-floating">
                                    <input type="text" class="form-control input" placeholder="Departement Name" asp-for="Name" required />
                                    <label for="floatingInput"> Departement Name</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- buttons -->
        <div class="row clearfix">
            <div class="col-md-12">
                <div class="button-submit">
                    <div class="body social">
                        <div class="row clearfix">
                            <div class="form-group mb-4 pt-2">
                                <button type="submit" class="btn btn-primary Submit">Create</button>
                                <button onclick="history.back()" class="btn btn-secondary"><i class="fas fa-angle-double-left"></i> Back </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>