@model DAL.Entities.Department
@{
    ViewBag.Title = "Create Departement";

}
@inject BLL.Services.IDoctorService Doc ;
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<!-- Validation Plugin Js -->

<script>
    if (@ViewBag.Success == 1) {
        swal("Saved Success!", "You clicked the button!", "success").then(function () {
            $(".A input").val("");
        });

    }
</script>
<div class="x_content mt-0">
    <h2 class="p-2 rounded ps-3">Create Departement</h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">
                Home
            </li>
            <li class="breadcrumb-item" aria-current="page">
                Create Departement
            </li>
        </ol>
    </nav>
    <form class="A" style="height: 100vh;" asp-controller="Department" asp-action="Create">
        <!-- Basic Information  -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card shadow">
                    <div class="header ms-3 pt-2">
                        <h3>Departement Information</h3>
                    </div>
                    <div class="body">
                        <!-- departement Name -->
                        <div class="row clearfix">
                            <div class="col-sm-12 mb-4">
                                <div class="form-floating input-group">
                                    <span class="input-group-text">
                                        <i class="fa-solid fa-id-card-clip"></i>
                                    </span>
                                    <input type="text" class="form-control input" placeholder="Departement Name"
                                           asp-for="Name" required />
                                    <label for="floatingInput"> Departement Name</label>
                                </div>
                                <span asp-validation-for="Name" class="text-danger"></span>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- buttons -->
        <div class="row clearfix">
            <div class="col-md-12">
                <div class="button-submit">
                    <div class="body social">
                        <div class="row clearfix">
                            <div class="form-group mb-4 pt-2">
                                <button type="submit" class="btn btn-primary Submit">Create</button>
                                <button onclick="history.back()" class="btn btn-secondary">
                                    <i class="fas fa-angle-double-left"></i> Back
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>