@model DAL.Models.UserWork.TypeWorkViewModel

@{
    ViewBag.Title = "Edit Work Type";
}
<div class="x_content mt-0">
    <h2 class="p-2 rounded ps-3">Edit Departement</h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">
                Home
            </li>
            <li class="breadcrumb-item" aria-current="page">
                Edit Work Type
            </li>
        </ol>
    </nav>
    <form style="height: 100vh;" asp-action="Edit" asp-controller="PaymentWay" asp-route-Id="@Model.Id">
        <!-- Basic Information  -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card shadow">
                    <div class="header ms-3 pt-2">
                        <h3>Work Type Information</h3>
                    </div>
                    <div class="body">
                        <!-- departement Name -->
                        <div class="row clearfix">
                            <div class="col-sm-12 mb-4">
                                <div class="alert alert-warning alert-dismissible fade show m-auto mb-1 d-none" role="alert">
                                    You should check in on some of those fields below.
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                                <div class="form-floating">
                                    <input type="hidden" value="@Model.Id" />

                                    <input type="text" class="form-control input" placeholder="Payment Way" asp-for="Name" required />
                                    <label for="floatingInput"> Payment Way </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- buttons -->
        <div class="row clearfix">
            <div class="col-md-12">
                <div class="button-submit">
                    <div class="body social">
                        <div class="row clearfix">
                            <div class="form-group mb-4 pt-2">
                                <button onclick="history.back()" class="btn btn-secondary"><i class="fas fa-angle-double-left"></i> Back </button>
                                <button type="submit" class="btn  Submit">Edit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<script src="~/jquery/jquery.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>
    $(document).ready(function () {
        if (@ViewBag.Success == 1) {
            swal({
                title: "Success!",
                text: "Department Edited Successfully",
                type: "success"
            }).then(function () {
                window.location = "/TypeWork/GetAllTypeWork";
            });
        }

    })
</script>