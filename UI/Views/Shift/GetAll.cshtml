@model IEnumerable<ShiftViewModel>

@{
    ViewData["Title"] = "GetAll";
}
<!-- page content -->
<div class="x_content mt-0">
    <h2 class="p-2 rounded">GetAll Shift</h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Home</li>
            <li class="breadcrumb-item" aria-current="page">GetAll Shift</li>
        </ol>
    </nav>
    <table class="table-Visitors table table-striped w-100">
        <thead>
            <tr class="table-dark">
                <th>Start time</th>
                <th>end Time</th>
                <th>Update</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <p>@item.StartShift.ToString("t")</p></td>
                    <td>
                        <p>@item.EndShift.ToString("t")</p>
                       </td>
                    <td class="w">
                        <div class="row">
                            <a asp-action="Update" asp-controller="Shift" asp-route-id=@item.Id class="col-6 btn edite m-0 p-1" target="_blank" data-bs-toggle="tooltip" data-bs-placement="top" title="Edite">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <a onclick="Delete(@item.Id)" class="col-6 btn delete m-0 p-1 p-1" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete">
                                <i class="fa-solid fa-trash-can"></i>
                            </a>
                        </div>
                    </td>



                </tr>
            }
        </tbody>
    </table>
</div>

<!-- /page content -->


<script type="text/javascript">

    function Delete(id){
          swal({
              title: `Are you sure you want to delete this record?`,
              text: "If you delete this, it will be gone forever.",
              icon: "warning",
              buttons: true,
              dangerMode: true,
          })
          .then((willDelete) => {
            if (willDelete) {
                $.ajax({

                type: "POST",
                url: "/Shift/Delete",
                data: {
                    id: id,

                },

                success: function (res) {

                       swal("Deleted!", "Your imaginary file has been archived.", "success");
                       window.location="/Shift/GetAll"

                }

            });
            }
          });
    }


</script>
