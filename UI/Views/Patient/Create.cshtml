@model DAL.Models.PatientViewModel
@{
    ViewBag.Title = "Create";
    Layout = "/Views/Shared/Layout/_ReseptionistLayout.cshtml";
}

@section PageHeader{
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Create New Patient</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Create New Patient</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
}
<form asp-controller="Patient" asp-action="Create" enctype="multipart/form-data" class="mt-5 mb-2 p-2">
    <div class="d-flex align-items-end justify-content-start">
        <h5 class=" mt-3 ms-3 me-3">Patient Information</h5>
        <hr class="w-75">
    </div>
    <div class="row clearfix">
        <!--  Name -->
        <div class="col-sm-6 mb-3 mt-3">
            <div class="alert alert-warning alert-dismissible fade show mb-1 d-none" role="alert">
                You should check in on some of those fields below.
                <button type="button" class="btn-close" data-bs-dismiss="alert"
                        aria-label="Close"></button>
            </div>
            <div class="form-floating input-group">
                <span class="input-group-text" for="Name"><i class="fas fa-user" for="Name"></i></span>
                <input asp-for=Name type="text" class="form-control input" id="Name" placeholder=" Name" required />
                <label for="Name"> Name</label>
            </div>
            <span asp-validation-for=Name class="text-danger"></span>
        </div>
        <!-- National Number -->
        <div class="col-sm-6 mb-3 mt-3">
            <div class="alert alert-warning alert-dismissible fade show mb-1 d-none" role="alert">
                You should check in on some of those fields below.a
                <button type="button" class="btn-close" data-bs-dismiss="alert"
                        aria-label="Close"></button>
            </div>
            <div class="form-floating input-group">
                <span class="input-group-text" id="basic-addon1"><i class="fas fa-address-card"></i></span>
                <input asp-for=SSN type="number" class="form-control input" placeholder="National Number" />
                <label for="NationalNumber">National Number</label>
            </div>
            <span asp-validation-for=SSN class="text-danger"></span>
        </div>
    </div>
    <div class="row clearfix">
        <!-- Date -->
        <div class="col-sm-6 mb-3 mt-3">
            <div class="alert alert-warning alert-dismissible fade show mb-1 d-none" role="alert">
                You should check in on some of those fields below.
                <button type="button" class="btn-close" data-bs-dismiss="alert"
                        aria-label="Close"></button>
            </div>
            <div class="form-floating input-group">
                <span class="input-group-text" id="basic-addon1"><i class="fas fa-calendar-alt"></i></span>
                <input asp-for=BirthDate type="date" data-provide="datepicker" data-date-autoclose="true"
                       class="form-control input" placeholder="Date of Birth" required />
                <label for="floatingInput">Date of Birth</label>
            </div>
            <span asp-validation-for=BirthDate class="text-danger"></span>
        </div>
        <!-- Address -->
        <div class="col-sm-6 mb-3 mt-3">
            <div class="alert alert-warning alert-dismissible fade show mb-1 d-none" role="alert">
                You should check in on some of those fields below.
                <button type="button" class="btn-close" data-bs-dismiss="alert"
                        aria-label="Close"></button>
            </div>
            <div class="form-floating input-group">
                <span class="input-group-text" id="basic-addon1"><i class="fas fa-map-marked-alt"></i></span>
                <input asp-for=Address type="text" class="form-control input" placeholder="address" required />
                <label for="Phone ">address</label>
            </div>
            <span asp-validation-for=Address class="text-danger"></span>

        </div>
    </div>
    <div class="row clearfix">
        <!-- Phone -->
        <div class="col-sm-6 mb-3 mt-3">
            <div class="alert alert-warning alert-dismissible fade show mb-1 d-none" role="alert">
                You should check in on some of those fields below.
                <button type="button" class="btn-close" data-bs-dismiss="alert"
                        aria-label="Close"></button>
            </div>
            <div class="form-floating input-group">
                <span class="input-group-text" id="basic-addon1"><i class="fas fa-phone-alt"></i></span>
                <input asp-for=Phone type="number" class="form-control input" placeholder="Phone" maxlength="11"
                       required />
                <label for="Phone">Phone</label>
            </div>
            <span asp-validation-for=Phone class="text-danger"></span>
        </div>
        <!-- other Phone -->
        <div class="col-sm-6 mb-3 mt-3">
            <div class="alert alert-warning alert-dismissible fade show mb-1 d-none" role="alert">
                You should check in on some of those fields below.
                <button type="button" class="btn-close" data-bs-dismiss="alert"
                        aria-label="Close"></button>
            </div>
            <div class="form-floating input-group">
                <span class="input-group-text" id="basic-addon1"><i class="fas fa-mobile-alt"></i></span>
                <input asp-for=AnotherPhone type="number" class="form-control input" placeholder="other Phone" maxlength="11"
                       required />
                <label for="Phone">other Phone</label>
            </div>
            <span asp-validation-for=AnotherPhone class="text-danger"></span>
        </div>
    </div>


    <div class="row clearfix">
        <!-- gender -->
        <div class="col-sm-6 mb-3 mt-3 row">
            <label class="col-form-label col-sm-3 col-md-3 label-align d-inline">
                Gender
            </label>
            <div class="col-8 col-sm-8 col-md-8 floatingInput">
                <div class="radio">
                    <label>
                        <input type="radio" class="flat " value="Male" checked name="Gender" />
                        Male
                    </label>
                </div>
                <div class="radio mt-1">
                    <label>
                        <input type="radio" class="flat" value="Fmale" name="Gender" />
                        Fmale
                    </label>
                </div>
            </div>
        </div>
        <!-- image -->
        <div class="col-sm-6 mb-3 mt-3 image">
            <div class="input-group mb-3 mt-3">
                <label class="input-group-text image-lable" for="inputGroupFile01">Image</label>
                <input asp-for=PhotoUrl type="file" class="form-control" id="inputGroupFile01">
            </div>
        </div>
    </div>
    <div class="mt-3">
        <div class="form-group mb-4 pt-2">
            <button type="submit" class="btn btn-save ">Create</button>
            <button type="reset" class="btn btn-outline-secondary">Reset</button>
        </div>
    </div>
</form>
<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>