@model DAL.Models.MedicineViewModel
@{
    ViewData["Title"] = "Create Medicine";
}
<!-- page content -->
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<div class="x_content mt-0">
    <h2 class="p-2 rounded ps-3">Create Medicine</h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">
                Home
            </li>
            <li class="breadcrumb-item" aria-current="page">
                Create Medicine
            </li>
        </ol>
    </nav>
    @if (ViewBag.Medicine == 11)
    {
<script>
            swal({
                title: "Success!",
                text: "Shift Edited Successfully",
                type: "success"
            }).then(function () {
                window.location = "/Medicine/AddMedicine";
            });
</script>
    }


    <form class="A" asp-controller="Medicine" asp-action="AddMedicine" method="post">
        <!-- Basic Information  -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card shadow">
                    <div class="header ms-3 pt-2">
                        <h3>Medicine Information</h3>
                    </div>
                    <div class="body">
                        @*Validation*@
                        @if (ViewBag.Rap == "1")
                        {
                            <div class="row clearfix">
                                <div class="col-sm-12 mb-4">
                                    <div class="alert alert-warning alert-dismissible fade show m-auto mb-1 " role="alert">
                                        Please Change Medicine Name it Used befoer
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"
                                                aria-label="Close"></button>
                                    </div>
                                    <div class="form-floating">
                                    </div>
                                </div>
                            </div>
                        }
                        <!-- Medicine Name -->
                        <div class="row clearfix">
                            <div class="col-sm-12 mb-4">
                                <div class="form-floating input-group">
                                    <span class="input-group-text">
                                        <i class="fa-solid fa-capsules"></i>
                                    </span>
                                    <input asp-for=Name type="text" class="form-control input"
                                           placeholder="Medicine Name" required />
                                    <label for="floatingInput">Medicine Name</label>
                                </div>
                                <span asp-validation-for="Name" class="text-danger"></span>

                            </div>
                        </div>
                        <!-- Medicine Price -->
                        <div class="row clearfix">
                            <div class="col-sm-12 mb-4">
                                <div class="form-floating input-group">
                                    <span class="input-group-text">
                                        <i class="fa-solid fa-tags"></i>
                                    </span>
                                    <input asp-for=Price type="text" class="form-control input"
                                           placeholder="Medicine Price" required />
                                    <label for="floatingInput">Medicine Price</label>
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="row clearfix">
                            <!-- Medicine Count -->
                            <div class="row clearfix">
                                <div class="col-sm-12 mb-4">
                                    <div class="form-floating input-group">
                                        <span class="input-group-text">
                                            <i class="fa-solid fa-list-ol"></i>
                                        </span>
                                        <input asp-for=Count type="number" class="form-control input"
                                               placeholder="Medicine Count" required />
                                        <label for="floatingInput">Medicine Count</label>
                                    </div>
                                    <span asp-validation-for="Count" class="text-danger"></span>

                                </div>
                            </div>
                            <!-- Medicine Count -->
                            <div class="row clearfix">
                                <div class="col-sm-12 mb-4">
                                    <div class="form-floating input-group">
                                        <span class="input-group-text">
                                            <i class="fa-solid fa-calendar-days"></i>
                                        </span>
                                        <input asp-for="StartDate" type="date" class="form-control input"
                                               placeholder="Medicine Start Date" required />
                                        <label for="floatingInput">Medicine Start Date</label>
                                    </div>
                                    <span asp-validation-for="StartDate" class="text-danger"></span>

                                </div>
                            </div>
                            <!-- Medicine Count -->
                            <div class="row clearfix">
                                <div class="col-sm-12 mb-4">
                                    <div class="form-floating input-group">
                                        <span class="input-group-text">
                                            <i class="fa-solid fa-calendar-days"></i>
                                        </span>
                                        <input asp-for="EndDate" type="date" class="form-control input"
                                               placeholder="Medicine End Date" required />
                                        <label for="floatingInput">Medicine End Date</label>
                                    </div>
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                    <div class="text-danger" asp-validation-summary=ModelOnly></div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- buttons -->
        <div class="row clearfix">
            <div class="col-md-12">
                <div class="button-submit">
                    <div class="body social">
                        <div class="row clearfix">
                            <div class="form-group mb-4 pt-2">
                                <button type="submit" class="btn Submit">Create</button>
                                <button type="reset" class="btn btn-outline-secondary">Reset</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <button onclick="history.back()" class="btn btn-secondary"><i class="fas fa-angle-double-left"></i> Back </button>

</div>

<!-- /page content -->
<!-- footer content -->
<!-- /footer content -->

<!-- move to up -->
<div class="up-btn shadow position-fixed rounded-lg" id="moveTop">
    <button type="button" class="btn btn-lg shadow text-light m-0">
        <i class="fa-solid fa-turn-up"></i>
    </button>
</div>

<!-- js -->
<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script>
    let alert = document.querySelectorAll('.alert')
    input = document.querySelectorAll('.input');

    for (let i = 0; i < input.length; i++) {
        input[i].addEventListener('keyup', () => {
            if (input[i].value === "")
                alert[i].classList.remove('d-none')
            else
                alert[i].classList.add('d-none')
        })
    }
</script>
