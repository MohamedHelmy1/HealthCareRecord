            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-lg-3 info">
                        <img src="~/website/images/logo.png" class="w-50" alt="footer-logo">
                        <ul class="foo-socials text-center clearfix mt-4">
                            <li><a href="#" class="ico-facebook"><i class="fab fa-facebook-f"></i></a></li>
                            <li><a href="#" class="ico-twitter"><i class="fab fa-twitter"></i></a></li>
                            <li>
                                <a href="#" class="ico-google-plus"><i class="fab fa-google-plus-g"></i></a>
                            </li>
                            <li><a href="#" class="ico-tumblr"><i class="fab fa-tumblr"></i></a></li>
                        </ul>
                    </div>

                    <div class="col-md-6 col-lg-3">
                        <!-- Title -->
                        <h5 class="h5-xs">@Localizer["WorkingTime"] </h5>
                        <!-- Working Hours -->
                        @inject BLL.Services.shiftServeses.IShiftServeses shifts;
