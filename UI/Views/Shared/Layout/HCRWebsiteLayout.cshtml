                            <p><i class="fa-solid fa-phone mt-3"></i> :<a href="#" class="text-light"> +20 1011309841
                                </a></p>
                            <p class="h5-xl blue-color fs-5 mt-3"><a href="tel:01011309841"
                                    class="text-light">01011309841</a></p>
                            <!-- Text -->
                            <p class="p-sm mt-15">
                                We will replay fast
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="footer-box mb-40">
                            <!-- Title -->
                            <h5 class="h5-xs">@Localizer["Location"] </h5>
                            <!-- Address -->
                            <p><i class="fa-solid fa-map-location-dot"></i> : Shebin El-Kom, Menoufia, Egypt</p>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-center  border-top  pt-3 pb-2">
                    <p class="text-light m-0 text-footer">&copy; 2022 HCR (3M-A Team) , All rights reserved.</p>
                </div>
            </div>
