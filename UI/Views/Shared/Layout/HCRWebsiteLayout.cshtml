                        {
                            <p class="p-sm">
                                <span>
                                    Start Date : @item.StartShift.ToString("t") - End Date :
                                    @item.EndShift.ToString("t")
                                </span>
                            </p>
                        }
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="footer-box mb-40">
                            <!-- Title -->
                            <h5 class="h5-xs">@Localizer["Contacts2"]</h5>
