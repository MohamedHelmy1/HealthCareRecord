                    <h5 class="offcanvas-title" id="offcanvasExampleLabel"></h5>
                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                        aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <!-- MAIN MENU -->
                    <nav class="navbar navbar-expand-lg navbar-light bg-light">
                        <ul class="navbar-nav">
                            <!-- DROPDOWN MENU -->
                            <p class="nav-item">
                                <a asp-action="Home" asp-controller="HCRWebsite">@Localizer["Home"]</a>
                            </p> <!-- END DROPDOWN MENU -->
                            <!-- PAGES -->
                            <p class="nav-item">
                                @if (Context.Request.Path.Value == "/HCRWebsite/Register")
                                {
                                    <a href="/HCRWebsite/Home/">@Localizer["About"]</a>
                                }
                                else
                                {
                                    <a href="#info-4">@Localizer["About"]</a>
                                }
                            </p> <!-- END PAGES -->
                            <!-- HALF MENU -->
                            <!-- MEGAMENU -->
                            <p class="nav-item">
                                @if (Context.Request.Path.Value == "/HCRWebsite/Register")
                                {
                                    <a href="/HCRWebsite/Home/">@Localizer["Services"]</a>
                                }
                                else
                                {
                                    <a href="#statistic-3">@Localizer["Services"]</a>
                                }
                            </p> <!-- END MEGAMENU -->
                            <!-- SIMPLE NAVIGATION LINK -->
                            <p class="nav-item">
                                <a href="#footer-1">@Localizer["Contacts"]</a>
                            </p>
                            <p class="nav-item">
                                <a href="#userGuide">@Localizer["UserGuide"]</a>
                            </p>
                            <!-- END HALF MENU -->
                            <!-- END HALF MENU -->
                            <!-- login -->
                            @if (signInManager.IsSignedIn(User))
                            {
                                var DataForUser = await userData.GetUserName(Email);
                                <!-- END login -->
                                <!-- register -->
                                <p class="nav-item">
                                    <a asp-action="PatientProfile" asp-controller="HCRWebsite"
                                    asp-route-id="@DataForUser.id">@DataForUser.Name</a>
                                </p>
                                <p class="nav-item">
                                <form asp-action="LogOff" asp-controller="Account" method="post">
                                    <button class="btn btn-Log mt-3">
                                            @* @Localizer["LogOut"] Log Out *@
                                        <i class="fa-solid fa-right-from-bracket"></i>
                                    </button>
                                </form>
                                </p>
                                <!-- END register -->
                            }
                            else
                            {
                                <p class="nav-item">
                                    <a asp-action="Login" asp-controller="Account"> @Localizer["login"]</a>
                                </p>
                                <!-- END login -->
                                <!-- register -->
                                <p class="nav-item">
                                    <a asp-action="Register" asp-controller="HCRWebsite"> @Localizer["Register"]</a>
                                </p>
                                <!-- END register -->
                            }
                            <!-- HALF MENU -->
                            <li class="nav-item">
                                <div class="wsmegamenu clearfix halfmenu">
                                    <!-- Links -->
                                    <ul class="link-list">
                                        <p><a
                                                href="/HCRWebsite/SetCulture?lang=en-US&URL=@Context.Request.Path.Value">EN</a>
                                        </p>
                                        <p><a href="/HCRWebsite/SetCulture?lang=ar-SA&URL=@Context.Request.Path.Value">
                                                AR</a></p>
                                    </ul>
                                </div>
                            </li>

                        </ul>
                    </nav> <!-- END MAIN MENU -->
                </div>
            </div>
            <!-- NAVIGATION MENU -->
            <div class="wsmainfull menu clearfix">
                <div class="wsmainwp clearfix">
                    <div class="d-flex w-100 justify-content-between">
                        <!-- LOGO IMAGE -->
                        <!-- For Retina Ready displays take a image with double the amount of pixels that your image will be displayed (e.g 360 x 80 pixels) -->
                        <div class="desktoplogo">
                            <a class="desktoplogo-logo" asp-action="Home" asp-controller="HCRWebsite">
                                <img src="~/website/images/logo.png" width="60" height="auto" alt="header-logo">
                                <h2 class="d-inline">HCR (3M-A Team)</h2>
                            </a>
                        </div>
                        <!-- MAIN MENU -->
                        <nav class="wsmenu clearfix">
                            <ul class="wsmenu-list">


                                <!-- DROPDOWN MENU -->
                                <li aria-haspopup="true">
                                    <a asp-action="Home" asp-controller="HCRWebsite">@Localizer["Home"]</a>

                                </li> <!-- END DROPDOWN MENU -->
                                <!-- PAGES -->
                                <li aria-haspopup="true">
                                    @if (Context.Request.Path.Value == "/HCRWebsite/Register")
                                    {
                                        <a href="/HCRWebsite/Home/">@Localizer["About"]</a>



                                    }
                                    else
                                    {
                                        <a class="about" href="#info-4">@Localizer["About"]</a>
                                    }


                                </li> <!-- END PAGES -->
                                <!-- HALF MENU -->
                                <!-- MEGAMENU -->
                                <li aria-haspopup="true">
                                    @if (Context.Request.Path.Value == "/HCRWebsite/Register")
                                    {
                                        <a class="Services" href="/HCRWebsite/Home/">@Localizer["Services"]</a>



                                    }
                                    else
                                    {
                                        <a class="Services" href="#statistic-3">@Localizer["Services"]</a>
                                    }


                                </li> <!-- END MEGAMENU -->
                                <!-- SIMPLE NAVIGATION LINK -->

                                <li aria-haspopup="true">
                                    <a class="Contacts" href="#footer-1">@Localizer["Contacts"]</a>

                                </li>
                                <li aria-haspopup="true">
                                    <a class="UserGuide" href="#userGuide">@Localizer["UserGuide"]</a>

                                </li>

                                <!-- END HALF MENU -->
                                <!-- END HALF MENU -->
                                <!-- login -->
                                @if (signInManager.IsSignedIn(User))
                                {
                                    var DataForUser = await userData.GetUserName(Email);

                                    @*<li aria-haspopup="true">
                                        <a> @DataForUser.Name</a>
                                        </li>*@
                                    <!-- END login -->
                                    <!-- register -->
                                    <li aria-haspopup="true">
                                        <a asp-action="PatientProfile" asp-controller="HCRWebsite"
                                        asp-route-id="@DataForUser.id">@DataForUser.Name</a>
                                    </li>

                                    <li aria-haspopup="true">
                                        <form asp-action="LogOff" asp-controller="Account" method="post">
                                            <button class="btn btn-Log mt-3">
                                                @* @Localizer["LogOut"] Log Out *@
                                                <i class="fa-solid fa-right-from-bracket"></i>
                                            </button>
                                        </form>
                                    </li>
                                    <!-- END register -->
                                }
                                else
                                {
                                    <li aria-haspopup="true">
                                        <a asp-action="Login" asp-controller="Account"> @Localizer["login"]</a>

                                    </li>
                                    <!-- END login -->
                                    <!-- register -->
                                    <li aria-haspopup="true">
                                        <a asp-action="Register" asp-controller="HCRWebsite"> @Localizer["Register"]</a>

                                    </li>
                                    <!-- END register -->

                                }
                                <!-- HALF MENU -->
                                <li aria-haspopup="true">
                                    <span class="wsmenu-click">
                                        <i class="wsmenu-arrow"></i>
                                    </span>
                                    <a><i class="fa-solid fa-globe"></i> <span class="wsarrow"></span></a>
                                    <div class="wsmegamenu clearfix halfmenu">
                                        <!-- Links -->
                                        <ul class="link-list">
                                            <li><a
                                                    href="/HCRWebsite/SetCulture?lang=en-US&URL=@Context.Request.Path.Value">EN</a>
                                            </li>
                                            <li><a
                                                    href="/HCRWebsite/SetCulture?lang=ar-SA&URL=@Context.Request.Path.Value">
                                                    AR</a></li>
                                        </ul>
                                    </div>
                                </li>

                            </ul>
                        </nav> <!-- END MAIN MENU -->
                    </div>
                </div>
            </div> <!-- END NAVIGATION MENU -->


        </header> <!-- END HEADER -->
        @RenderBody()

