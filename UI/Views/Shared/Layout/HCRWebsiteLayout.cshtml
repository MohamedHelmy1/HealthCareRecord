                            <p class="foo-email mt-20">
                                <i class="fa-solid fa-envelope"></i> : <a href="#">healthcarerecord3@gmail.com</a>
                            </p>
                            @* <h5 class="h5-xs">@Localizer["Emergency"]</h5> *@
