@model DAL.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>HCR | Log in</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/receptionist dashbord/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/receptionist dashbord/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <!-- Bootstrap -->
    <link href="~/vendors/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/receptionist dashbord/dist/css/style.css" rel="stylesheet" />
    <!-- Custom Theme Style -->
    <!-- <link href="~/dist/css/ar/ar-main.css" rel="stylesheet" /> -->
    <link href="~/dist/css/en/main.css" rel="stylesheet" />
</head>

<body class="">
    <div class="row  add-patient m-0">
        <div class="col-12 col-md-6 mt-5 ps-5 pe-5 pt-5">
            <h2 class="mt-5 header-form Register"> <b>HCR </b> Login </h2>
            <form asp-action="Login" asp-controller="Account" class="mt-5 mb-2" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row clearfix">
                    <!--Email  -->
                    <div class="col-sm-12 mb-3 mt-3">
                        <div class="form-floating  input-group">
                            <span class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </span>
                            <input type="text" class="form-control input" placeholder="Email" asp-for="Email">
                            @* <input type="email" asp-for="Email" class="form-control input" placeholder="Email"
                    required /> *@
                            <label for="email">Email</label>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <!-- password -->
                    <div class="col-sm-12 mb-3 mt-3">
                        <div class="form-floating  input-group">
                            <span class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </span>
                            <input type="password" class="form-control input" asp-for="Password" placeholder="Password">
                            @* <input type="password" class="form-control input"
                    placeholder="password" asp-for="RememberMe" required /> *@
                            <label for="password">Password</label>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                </div>
                <div class="mt-3">
                    <div class="form-group mb-4 pt-2">
                        <button type="submit" class="btn btn-lg "> Login</button>
                    </div>
                </div>
                <!--RememberMe -->
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" id="remember">
                            <label asp-for="RememberMe" for="remember">
                                Remember Me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-save btn-block">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
                <!--ForgetPassword -->
                <p class="mb-1 mt-2">
                    <a asp-action="ForgetPassword" asp-controller="Account">I forgot my password !</a>
                </p>
                <!--Register -->
                <p class="mb-1 mt-2">
                    <a asp-action="Register" asp-controller="HCRWebsite">Register ?</a>
                </p>
            </form>
        </div>
        <div class="col-12 col-md-6 bg-patient Login p-0 border-0 rounded">
        </div>
    </div>

    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/receptionist dashbord/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/receptionist dashbord/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/receptionist dashbord/dist/js/adminlte.min.js"></script>
    <!-- Validation Plugin Js -->
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>
