@model TreatmentViewModel
@{
    ViewBag.Title = "Waiting Page";
    Layout = "~/Views/Shared/Layout/_ReseptionistLayout.cshtml";
}
@inject BLL.Services.PharmacistWorkServices.IPharmacistWorkServices Data;
@section PageHeader{
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0"><i class="fa fa-spinner" aria-hidden="true"></i> Pharmacy Waiting Page</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Pharmacy Waiting Page</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
}

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <!-- /.row -->
        <!-- Main row -->

        <div class="card">
            <div class="card-header">
            </div>
            <!-- /.card-header -->
            <div class="card-body patients-wating pe-0 ps-0">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Patient Name</th>
                            <th>Medicine Name</th>
                            <th>Quantity</th>
                            <th>Doctor Name</th>
                            <th>Date And Time</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{var Counter = 1;}
                        @foreach (var item in Data.GetAllOrders())
                        {
                            <tr>
                                <td>@(Counter++)</td>
                                <th>@item.PatientName</th>
                                <th>@item.MedicineName</th>
                                <th>Quantity</th>
                                <th>@item.DoctorName</th>
                                <th>@item.OrderDateAndTime</th>
                                <td>
                                    <a asp-action="PharmacistWork" asp-controller="Pharmacist" class="btn btn-success me-3"><i class="text-light fas fa-check"></i></a>
                                    <a href="#" class="btn btn-danger"><i class="text-light fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                    <tfoot>
                        <tr>
                            <th>#</th>
                            <th>Patient Name</th>
                            <th>Medicine Name</th>
                            <th>Quantity</th>
                            <th>Doctor Name</th>
                            <th>Date And Time</th>
                            <th>Actions</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.card-body -->
        </div>

        <!-- /.row (main row) -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->