
@{
    ViewData["Title"] = "Pharmacist Work";
    Layout = "~/Views/Shared/Layout/_ReseptionistLayout.cshtml";
}
@section PageHeader{
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0"><i class="fas fa-capsules"></i> Pharmacist Work</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Pharmacist Work</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
}
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- patient info  -->
        <div class="info-div row align-items-end justify-content-start mt-4">
            <h5 class="col-sm-6 col-md-3 info-header">Patient Info</h5>
            <hr class="col w-100">
        </div>
        <div class="row clearfix mt-4 " id="radiology">
            <!-- patient name -->
            <div class="col-md-6 col-sm-12 mb-3">
                <div class="form-floating input-group">
                    <span class="input-group-text">
                        <i class="fas fa-user"></i>
                    </span>
                    <p class="form-control ">Patient Name : </p>
                </div>
            </div>
            <!--patient ud  -->
            <div class="col-md-6 col-sm-12 mb-3">
                <div class="form-floating input-group">
                    <span class="input-group-text">
                        <i class="fas fa-address-card"></i>
                    </span>
                    <p class="form-control ">SSN : </p>
                </div>
            </div>
            <!-- address -->
            <div class="col-md-6 col-sm-12 mb-3">
                <div class="form-floating input-group">
                    <span class="input-group-text">
                        <i class="fas fa-map-marked-alt"></i>
                    </span>
                    <p class="form-control ">Address : </p>
                </div>
            </div>
            <!-- phone  -->
            <div class="col-md-6 col-sm-12 mb-3">
                <div class="form-floating input-group">
                    <span class="input-group-text">
                        <i class="fas fa-phone-alt"></i>
                    </span>
                    <p class="form-control ">Phone : </p>
                </div>
            </div>
            <!-- doctor   -->
            <div class="col-md-6 col-sm-12 mb-3">
                <div class="form-floating input-group">
                    <span class="input-group-text">
                        <i class="fas fa-user-md"></i>
                    </span>
                    <p class="form-control ">Doctor : </p>
                </div>
            </div>

            <!--  -->
            <!-- medicine  -->
            <div class="info-div row align-items-end justify-content-start mt-4">
                <h5 class="col-sm-6 col-md-2 info-header">Result</h5>
                <hr class="col w-100">
            </div>
            <!-- uploud  -->
            <form>
                <div class="row" id="Medicine">
                    <div class="row">
                        <!--medicine  -->
                        <div class="col-md-6 col-sm-12 ">
                            <div class="form-floating input-group">
                                <span class="input-group-text" for="Name">
                                    <i class="fas fa-capsules"></i>
                                </span>
                                <input class="form-control form-control show-tick" list="name Medicine"
                                       id="exampleDataList" placeholder="Medicine">
                                <datalist id="name Medicine">
                                    <option value="">- Medicines -</option>
                                    <option value="A medical">ss</option>
                                    <option value="Treatment">alii</option>
                                    <option value="Surgery">laylaa</option>
                                    <option value="X-ray work">reeam</option>
                                    <option value="Emergency">ahmed</option>
                                </datalist>
                                <label for="floatingInput">- Medicines -</label>
                            </div>
                        </div>
                        <!-- amount   -->
                        <div class="col-11 col-sm-11 col-md-5">
                            <div class="form-floating input-group">
                                <span class="input-group-text" for="Name">
                                    <i class="fas fa-capsules"></i>
                                </span>
                                <select class="form-select form-control form-control show-tick input"
                                        placeholder="amount ">
                                    <option selected>- amount -</option>
                                    <option value="30"> 30 </option>
                                    <option value="33"> 33</option>
                                </select>
                                <label for=" amount">- amount -</label>
                            </div>
                        </div>
                        <div class="col-1 col-sm-1 col-md-1 mb-2">
                            <button type="button" class="btn btn-primary mt-4 more"
                                    onclick="add('Medicine')">
                                +
                            </button>
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <div class="form-group mb-4 pt-2">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-action="WaitingPage" asp-controller="Pharmacist" class="btn btn-primary">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
