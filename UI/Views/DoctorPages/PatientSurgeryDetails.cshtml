
@{
    ViewBag.Title = "HCR | Patient Surgery Details";
    Layout = "~/Views/Shared/Layout/_ReseptionistLayout.cshtml";
}

@section PageHeader{
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Patient Surgery Details</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Patient Surgery Details</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
}
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row clearfix mt-4 " id="radiology">
            <!--Surgery name -->
            <div class="col-md-6 col-sm-12 mb-3">
                <div class="form-floating input-group">
                    <span class="input-group-text">
                        <i class="fas fa-hospital-user"></i>
                    </span>
                    <p class="form-control ">Surgery Name : </p>
                </div>
            </div>
            <!--boctor name  -->
            <div class="col-md-6 col-sm-12 mb-3">
                <div class="form-floating input-group">
                    <span class="input-group-text">
                        <i class="fas fa-user-md"></i>
                    </span>
                    <p class="form-control ">Doctor Name : </p>
                </div>
            </div>
            <div class="row">
                <!--nurse name  -->
                <div class="col-md-6 col-sm-12 mb-3">
                    <div class="form-floating input-group">
                        <span class="input-group-text">
                            <i class="fas fa-user-md"></i>
                        </span>
                        <p class="form-control ">Nurse Name : </p>
                    </div>
                </div>
                <!--Room  -->
                <div class="col-md-6 col-sm-12 mb-3">
                    <div class="form-floating input-group">
                        <span class="input-group-text">
                            <i class="fas fa-procedures"></i>
                        </span>
                        <p class="form-control ">Room : </p>
                    </div>
                </div>

            </div>
            <div class="row">
                <!--date  -->
                <div class="col-md-6 col-sm-12 mb-3">
                    <div class="form-floating input-group">
                        <span class="input-group-text">
                            <i class="fas fa-calendar-alt"></i>
                        </span>
                        <p class="form-control ">Date : </p>
                    </div>
                </div>
                <!-- time   -->
                <div class="col-md-6 col-sm-12 mb-3">
                    <div class="form-floating input-group">
                        <span class="input-group-text">
                            <i class="fas fa-clock"></i>
                        </span>
                        <p class="form-control ">Time : </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <!-- price   -->
                <div class="col-md-6 col-sm-12 mb-3">
                    <div class="form-floating input-group">
                        <span class="input-group-text">
                            <i class="fas fa-money-bill-alt"></i>
                        </span>
                        <p class="form-control ">Price : </p>
                    </div>
                </div>
                <!--  -->
                <div class="col-md-6 col-sm-12 mb-3">
                    <div class="form-floating input-group">
                        <span class="input-group-text">
                            <i class="fas fa-clipboard-list"></i>
                        </span>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="4" readonly></textarea>
                    </div>
                </div>
            </div>

            <div class="row">
                <!--download  operation  -->
                <div class="col-md-6 col-sm-12 mb-3">
                    <a class="btn btn-secondary " href="" download>
                        download operation
                    </a>
                    <a class="btn btn-secondary" href="" download>
                        <i class="fas fa-print"></i>
                    </a>
                </div>
            </div>

        </div>
        <a asp-action="GetAllPatientSurgery" asp-controller="DoctorPages" class="btn btn-primary">Back</a>
    </div><!-- /.container-fluid -->
</section>
<button onclick="history.back()" class="btn btn-secondary"><i class="fas fa-angle-double-left"></i> Back </button>

<!-- /.content -->
