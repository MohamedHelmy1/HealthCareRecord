@model DAL.Models.PatientViewModel
@{
    ViewBag.Title = "Register";
    Layout = "/Views/Shared/Layout/HCRWebsiteLayout.cshtml";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<section id="contacts-1" class="wide-60 contacts-section division">
    <div class="container">


        <!-- SECTION TITLE -->
        <div class="row">
            <div class="col-lg-10 offset-lg-1 section-title">

                <!-- Title -->
                <h3 class="h3-md steelblue-color">@Localizer["Data"]</h3>

                <!-- Text -->
                <p>
                    @Localizer["DataDescribe"]
                </p>

            </div>
        </div>


        <div class="row justify-content-center">



            <!-- Register FORM -->
            <div class="col-md-7 col-lg-8">
                <div class="form-holder mb-40">
                    <form asp-controller="HCRWebsite" asp-action="Register" method="post" enctype="multipart/form-data"
                        class="row
    form-contact">

                        <!-- Register Form Input -->
                        <!-- Name -->
                        <div id="input-name" class="col-md-12 col-lg-6">
                            <input type="text" asp-for="Name" class="form-control name"
                                placeholder=" @Localizer["Name"]" required>
                            <span asp-validation-for=Name class="text-danger"></span>
                        </div>

                        <!-- National Number -->
                        <div id="input-name" class="col-md-12 col-lg-6">
                            <input type="text" asp-for="SSN" class="form-control name" placeholder=" @Localizer["SSN"]"
                                required>
                            <span asp-validation-for=SSN class="text-danger"></span>
                        </div>
                        <!-- Birth Date -->
                        <div id="input-email" class="col-md-12 col-lg-6">
                            <input type="date" asp-for="BirthDate" class="form-control date"
                                placeholder="@Localizer["Date"]" required>
                            <span asp-validation-for=BirthDate class="text-danger"></span>
                        </div>
                        <!-- Address -->
                        <div id="input-name" class="col-md-12 col-lg-6">
                            <input type="text" asp-for="Address" class="form-control name"
                                placeholder=" @Localizer["Address"]" required>
                            <span asp-validation-for=Address class="text-danger"></span>
                        </div>
                        <!-- Phone Number -->
                        <div id="input-phone" class="col-md-12 col-lg-6">
                            <input type="number" asp-for="Phone" class="form-control phone"
                                placeholder="@Localizer["PhoneNumber"]" required>
                            <span asp-validation-for=Phone class="text-danger"></span>
                        </div>
                        <!-- Another Phone Number -->
                        <div id="input-phone" class="col-md-12 col-lg-6">
                            <input type="number" asp-for="AnotherPhone" class="form-control phone"
                                placeholder="@Localizer["AnotherPhoneNumber"]" required>
                            <span asp-validation-for=AnotherPhone class="text-danger"></span>
                        </div>
                        <!-- Photo -->
                        <div id="input-phone" class="col-md-12 col-lg-6">
                            <input type="file" asp-for="PhotoUrl" class="form-control fa-photo"
                                placeholder="@Localizer["UploadPhoto"]" required>
                            <span asp-validation-for=PhotoUrl class="text-danger"></span>
                        </div>
                        <!-- gender -->
                        <div class="row col-md-12 col-lg-6">
                            <label class="col-form-label col-sm-3 col-md-3 label-align d-inline">
                                @Localizer["Gender"]
                            </label>
                            <div class="col-7 col-sm-7 col-md-7 floatingInput">
                                <div class="radio">
                                    <label>
                                        <input type="radio" class="flat " value="Male" checked name="Gender" />
                                        @Localizer["Male"]
                                    </label>
                                </div>
                                <div class="radio mt-1">
                                    <label>
                                        <input type="radio" class="flat" value="Fmale" name="Gender" />
                                        @Localizer["Fmale"]
                                    </label>
                                </div>
                            </div>
                            <span asp-validation-for=Gender class="text-danger"></span>
                        </div>
                        <!-- Register Form Button -->
                        <div class="col-lg-12 mt-15 form-btn">
                            <button type="submit" class="btn btn-blue blue-hover submit">
                                @Localizer["Create"]
                            </button>
                        </div>

                    </form>

                </div>
            </div> <!-- END CONTACT FORM -->


        </div> <!-- End row -->


    </div> <!-- End container -->
</section>




<div class="row  add-patient m-0">
    <div class="col-12 col-md-6 mt-5 ps-5">
        <h1 class="mt-5 header-form Register"> Register </h1>
        <form action="" class="mt-5 mb-2">
            <div class="row clearfix">
                <!--User name  -->
                <div class="col-sm-6 mb-3 mt-3">
                    <div class="form-floating  input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input type="text" class="form-control input" placeholder="User name" required />
                        <label for="floatingInput">User name</label>
                    </div>
                </div>
                <!-- id number -->
                <div class="col-sm-6 mb-3 mt-3">
                    <div class="form-floating  input-group">
                        <span class="input-group-text"><i class="fas fa-address-card"></i></span>
                        <input type="number" class="form-control input" placeholder="National Number" maxlength="14"
                            required />
                        <label for="NationalNumber">National Number</label>
                    </div>
                </div>

            </div>
            <div class="row clearfix">
                <!-- Phone -->
                <div class="col-sm-6 mb-3 mt-3">
                    <div class="form-floating  input-group">
                        <span class="input-group-text"><i class="fas fa-phone-alt"></i></span>
                        <input type="number" class="form-control input" placeholder="Phone" maxlength="11" required />
                        <label for="Phone">Phone</label>
                    </div>
                </div>
                <!-- Phone -->
                <div class="col-sm-6 mb-3 mt-3">
                   <div class="form-floating  input-group">
                        <span class="input-group-text"><i class="fas fa-phone-alt"></i></span>
                        <input type="number" class="form-control input" placeholder="Other Phone" maxlength="11" required />
                        <label for="Phone">Other Phone</label>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <!--date  -->
                <div class="col-sm-6 mb-3 mt-3">
                    <div class="form-floating  input-group">
                        <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                        <input type="date" data-provide="datepicker" data-date-autoclose="true"
                            class="form-control input" placeholder="Date" required />
                        <label for="floatingInput">Date</label>
                    </div>
                </div>
                <!--Address  -->
                <div class="col-sm-6 mb-3 mt-3">
                    <div class="form-floating  input-group">
                        <span class="input-group-text"><i class="fas fa-map-marked"></i></span>
                        <input type="text" class="form-control input" placeholder="Enter Your Address" required />
                        <label for="floatingInput">Enter Your Address</label>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <!--date  -->
                <div class="col-sm-6 mb-3 mt-3">
                    <div class="form-floating  input-group">
                        <span class="input-group-text"><i class="fas fa-image"></i></span>
                        <input class="form-control form-control input" type="file" id="formFile">
                        <label for="floatingInput">image</label>
                    </div>
                </div>
                <!--Address  -->
                <div class="col-sm-6 mb-3 mt-3">
                    <div class="form-floating  input-group">
                        <span class="input-group-text" ><i class="fas fa-male"></i></span>
                        <select class="form-select form-control input" aria-label="Default select example">
                            <option selected>Gender</option>
                            <option value="1">male</option>
                            <option value="2">fmale</option>
                        </select>
                        <label for="floatingInput">Enter Your Address</label>
                    </div>
                </div>
            </div>
            <div class="mt-3">
                <div class="form-group mb-4 pt-2">
                    <button type="submit" class="btn btn-lg "> Register</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-12 col-md-6 bg-patient p-0 border-0 rounded">
    </div>
</div>
<script src="~/jquery/jquery.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
@*Validation Plugin Js*@
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script>
    $(document).ready(function () {

        if (@ViewBag.Success == 1) {
            swal({
                title: "Success!",
                text: "Patient Created Successfully",
                type: "success"
            }).then(function () {
                window.location = "/HCRWebsite/Home";
            });
        }

    })
</script>