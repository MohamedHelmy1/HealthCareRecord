@model IdentityRole
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form asp-controller="Roles" asp-action="Edit" class="form-group">


    <input type="hidden" asp-for="Id" />

    <label asp-for="Name">Role Name</label>
    <input type="text" placeholder="Role Name" asp-for="Name" class="form-control" />
    <br />

    <center>
        <input type="submit" value="Edit" class="btn btn-primary btn-block" />
    </center>

</form>
<a asp-controller="Roles" asp-action="EditUserInRole" asp-route-id="@Model.Id">Add Or Remove User With Role</a>